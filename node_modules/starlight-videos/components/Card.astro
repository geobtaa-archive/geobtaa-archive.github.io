---
interface Props {
  description?: string | undefined
  link: string
  title: string
}

const { description, link, title } = Astro.props
---

<article>
  <h2><a href={link}>{title}</a></h2>
  {
    description && (
      <div class="sl-videos-card-description">
        <p>{description}</p>
      </div>
    )
  }
  <footer>
    <slot />
  </footer>
</article>

<style>
  article {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    box-shadow: var(--sl-shadow-sm);
    color: var(--sl-color-gray-3);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    line-height: 1.5;
    position: relative;
  }

  article:hover,
  article:has(:focus-within) {
    background-color: var(--sl-color-gray-7, var(--sl-color-gray-6));
    border-color: var(--sl-color-gray-2);
  }

  .sl-videos-card-description {
    flex-grow: 1;
    padding-inline: 1rem;
  }

  h2 {
    font-size: var(--sl-text-lg);
    font-weight: 600;
    line-height: var(--sl-line-height-headings);
    margin-block: 0;
    padding-inline: 1rem;
    padding-top: 1rem;
  }

  h2:has(+ :not(.sl-videos-card-description)) {
    flex-grow: 1;
  }

  a {
    color: var(--sl-color-white);
    text-decoration: none;
  }

  a::before {
    content: '';
    inset: 0;
    position: absolute;
  }

  p {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
  }

  footer {
    border-top: 1px solid var(--sl-color-gray-5);
    display: flex;
    font-size: var(--sl-text-sm);
    margin-top: 0.25rem;
    padding: 0.5rem 1rem;
  }
</style>
