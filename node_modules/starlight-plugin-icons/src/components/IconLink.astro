---
interface Props {
  icon: string
  href?: string
  title?: string
  flat?: boolean
  class?: string
}

const { href, icon, title, flat = false, class: className } = Astro.props
---

<a
  href={href}
  class:list={['starlight-iconlink', flat ? 'starlight-iconlink--flat' : 'starlight-iconlink--enhanced', className]}
>
  <div class="starlight-iconlink__icon">
    <span class={icon}></span>
  </div>
  {
    title ? (
      <p class="starlight-iconlink__title">{title}</p>
    ) : (
      <p class="starlight-iconlink__title">
        <slot />
      </p>
    )
  }
</a>

<style>
  .starlight-iconlink {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: var(--spi-iconlink-gap, 0.5rem);
    padding: var(--spi-iconlink-pad, 1rem);
    border-radius: var(--spi-iconlink-radius, 0.5rem);
    text-decoration: none;
    font-size: var(--sl-text-sm);
    transition:
      background-color 0.2s,
      box-shadow 0.2s,
      border-color 0.2s,
      color 0.2s;
    background-color: transparent;
    width: var(--spi-iconlink-width, 9rem);
    height: var(--spi-iconlink-height, 8rem);
  }

  .starlight-iconlink--flat {
    border: 1px solid var(--sl-color-gray-5);
  }

  .starlight-iconlink--flat:hover,
  .starlight-iconlink--flat:focus {
    border-color: var(--sl-color-accent);
    background: color-mix(in srgb, var(--sl-color-accent-low) 20%, transparent);
  }

  html[data-theme='light'] .starlight-iconlink--flat:hover,
  html[data-theme='light'] .starlight-iconlink--flat:focus {
    background: color-mix(in srgb, var(--sl-color-accent-low) 10%, transparent);
  }

  .starlight-iconlink--enhanced {
    border: 1px solid transparent;
    background-origin: border-box;
    background-image:
      linear-gradient(
        to top,
        color-mix(in oklab, var(--sl-color-black) 5%, transparent) 0%,
        color-mix(in oklab, var(--sl-color-black) 60%, transparent) 50%
      ),
      linear-gradient(
        to top,
        color-mix(in oklab, var(--sl-color-gray-5) 75%, transparent),
        color-mix(in oklab, var(--sl-color-gray-5) 100%, transparent)
      );
    background-clip: padding-box, border-box;
    box-shadow: 0 2px 5px -3px var(--sl-color-gray-5);
  }

  html[data-theme='light'] .starlight-iconlink--enhanced {
    border: 1px solid transparent;
    background-origin: border-box;
    background-image:
      linear-gradient(
        to top in oklab,
        color-mix(in oklab, var(--sl-color-white) 5%, white) 0%,
        color-mix(in oklab, var(--sl-color-black) 60%, white) 50%
      ),
      linear-gradient(
        to top,
        color-mix(in oklab, var(--sl-color-gray-6) 75%, transparent),
        color-mix(in oklab, var(--sl-color-gray-6) 100%, transparent)
      );
    background-clip: padding-box, border-box;
    box-shadow: 0 2px 5px -3px #ffffff50;
    color: var(--sl-color-gray-5);
  }

  .starlight-iconlink--enhanced:hover,
  .starlight-iconlink--enhanced:focus {
    border-color: var(--sl-color-gray-3);
    box-shadow:
      inset 0 -10px 10px -5px color-mix(in srgb, var(--sl-color-accent) 10%, transparent),
      0 -10px 10px -5px color-mix(in srgb, var(--sl-color-accent) 10%, transparent),
      inset 0 10px 10px -5px color-mix(in srgb, var(--sl-color-accent) 10%, transparent),
      0 10px 10px -5px color-mix(in srgb, var(--sl-color-accent) 10%, transparent);
  }

  html[data-theme='light'] .starlight-iconlink--enhanced:hover,
  html[data-theme='light'] .starlight-iconlink--enhanced:focus {
    border-color: var(--sl-color-gray-4);
  }

  .starlight-iconlink__title {
    margin: 0;
    font-weight: 600;
    color: var(--sl-color-gray-1);
  }

  html[data-theme='light'] .starlight-iconlink__title {
    color: var(--sl-color-gray-1);
  }

  .starlight-iconlink:hover .starlight-iconlink__title,
  .starlight-iconlink:focus .starlight-iconlink__title,
  .starlight-iconlink:hover .starlight-iconlink__icon,
  .starlight-iconlink:focus .starlight-iconlink__icon {
    color: var(--sl-color-white);
  }

  .starlight-iconlink__icon {
    width: var(--spi-iconlink-icon-size, 3rem);
    height: var(--spi-iconlink-icon-size, 3rem);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sl-color-gray-1);
  }

  .starlight-iconlink__icon span {
    width: 100%;
    height: 100%;
    font-size: var(--spi-iconlink-icon-size, 3rem);
  }
</style>
