---
interface Props {
  icon?: string
  title: string
  bordered?: boolean
  class?: string
}

const { icon, title, bordered, class: className } = Astro.props
---

<article class:list={['starlight-card sl-flex', bordered && 'starlight-card--bordered', className]}>
  <p class="starlight-card__title sl-flex">
    {
      icon && bordered && (
        <span class="starlight-card__icon-wrapper">
          <span class:list={[icon, 'starlight-card__icon']} />
        </span>
      )
    }
    {icon && !bordered && <span class:list={[icon, 'starlight-card__icon']} />}
    <span set:html={title} />
  </p>
  <div class="starlight-card__content"><slot /></div>
</article>

<style>
  @layer starlight.components {
    .starlight-card {
      --sl-card-border: var(--sl-color-purple);
      --sl-card-bg: var(--sl-color-purple-low);
      border: 1px solid var(--sl-color-gray-5);
      background-color: var(--sl-color-black);
      padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
      flex-direction: column;
      gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
    }
    .starlight-card:nth-child(4n + 1) {
      --sl-card-border: var(--sl-color-orange);
      --sl-card-bg: var(--sl-color-orange-low);
    }
    .starlight-card:nth-child(4n + 3) {
      --sl-card-border: var(--sl-color-green);
      --sl-card-bg: var(--sl-color-green-low);
    }
    .starlight-card:nth-child(4n + 4) {
      --sl-card-border: var(--sl-color-red);
      --sl-card-bg: var(--sl-color-red-low);
    }
    .starlight-card:nth-child(4n + 5) {
      --sl-card-border: var(--sl-color-blue);
      --sl-card-bg: var(--sl-color-blue-low);
    }
    .starlight-card__title {
      font-weight: 600;
      font-size: var(--sl-text-h4);
      color: var(--sl-color-white);
      line-height: var(--sl-line-height-headings);
      gap: 1rem;
      align-items: center;
    }
    .starlight-card__icon {
      flex-shrink: 0;
      display: inline-block;
      width: var(--spi-card-icon-size, 1em);
      height: var(--spi-card-icon-size, 1em);
    }
    .starlight-card__icon-wrapper {
      border: 1px solid var(--sl-card-border);
      background-color: var(--sl-card-bg);
      padding: var(--spi-card-icon-wrapper-pad, 0.25em);
      border-radius: 0.25rem;
      flex-shrink: 0;
      display: inline-flex;
      align-items: center;
    }
    .starlight-card__icon-wrapper .starlight-card__icon {
      font-size: var(--spi-card-icon-size, 1em);
    }
    .starlight-card__content {
      margin: 0;
      font-size: clamp(var(--sl-text-sm), calc(0.5rem + 1vw), var(--sl-text-body));
    }
  }
</style>
