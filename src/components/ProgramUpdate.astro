/* no props */
---
<section class="pu">
  <slot />
</section>

<style is:global>
/* Only styles things inside <ProgramUpdate> */
.pu { --brand:#003C5B; --brand2:#005E8E; --brand3:#0088CE; }

/* ---------- All H2s get banded background ---------- */
.pu h2 {
  position: relative;
  padding-top: .4rem;
  z-index: 1; /* ensures text stays above the pseudo-element */
}

.pu h2::before {
  content: "";
  position: absolute;
  inset: -0.8rem -1.2rem auto -1.2rem;
  height: calc(100% + 0.8rem);
  z-index: -1;
  background:
    radial-gradient(1200px 200px at 50% -80px,
      color-mix(in oklab, var(--brand3) 6%, transparent),
      transparent),
    linear-gradient(180deg,
      color-mix(in oklab, var(--brand2) 4%, transparent),
      transparent);
}


/* Figure treatment (image + italic line caption) for blog images */
.pu p:has(img){ display:grid; justify-items:center; margin:1rem 0; }
.pu p:has(img) img{ border-radius:14px; box-shadow:0 6px 20px rgba(0,0,0,.08); max-width:100%; height:auto; }
.pu p:has(img) + p em{ display:block; margin-top:.35rem; text-align:center;
  color: color-mix(in oklab, var(--sl-color-text) 70%, #666); font-size:.92rem; }

/* ---------- Starlight Cards: Committees = fixed 2Ã—2 grid ---------- */
.pu :is(.sl-card-grid,.card-grid){  /* support both class names just in case */
  display:grid;
  grid-template-columns: repeat(2, minmax(260px, 1fr));
  gap: 1rem;
}
@media (max-width: 720px){
  .pu :is(.sl-card-grid,.card-grid){ grid-template-columns: 1fr; }
}

/* Card polish (works for both CardGrid children and standalone Cards) */
.pu :is(.sl-card,.card){
  border: 1px solid var(--sl-color-hairline);
  background: #fff;
  padding: .9rem 1rem; /* Starlight usually handles its own padding; this is a light nudge */
  box-shadow: 0 2px 10px rgba(0,0,0,.04);
}

/* Optional: make h3s/titles inside cards tight */
.pu :is(.sl-card,.card) :where(h3,h4){ margin-top:0; }


/* ---------- KPI cards (CardGrid) ---------- */

.pu .kpi-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* fixed 3-column layout */
  gap: 1rem;
}

@media (max-width: 900px) {
  .pu .kpi-grid {
    grid-template-columns: repeat(2, 1fr); /* 2 across on tablets */
  }
}

@media (max-width: 600px) {
  .pu .kpi-grid {
    grid-template-columns: 1fr; /* 1 across on phones */
  }
}

.pu .kpi-card {
  display: grid;
  grid-template-rows: auto 1fr;
  align-items: start;
  border: 1px solid var(--sl-color-hairline);
  border-radius: 14px;
  background: #fff;
  padding: .9rem 1rem;           /* gentle boost */
  box-shadow: 0 2px 10px rgba(0,0,0,.04);
}

.pu .kpi-label {
  color: color-mix(in oklab, var(--sl-color-text) 70%, #777);
  text-transform: uppercase;
  letter-spacing: .04em;
  font-size: .8rem;
  margin: 0 0 .15rem;
}

.pu .kpi-value {
  font-size: 1.6rem;
  font-weight: 700;
  color: #003C5B;
  line-height: 1.1;
}

.pu .kpi-delta {
  display: inline-block;
  margin-left: .4rem;
  font-size: .9rem;
  font-weight: 600;
  padding: .1rem .45rem;
  border-radius: 999px;
}
.pu .kpi-delta.up   { color:#0b7a39; background: color-mix(in oklab, #0b7a39 10%, #fff); }
.pu .kpi-delta.down { color:#a33;    background: color-mix(in oklab, #a33 10%, #fff); }

/* ---------- Chip list (Top searches) ---------- */
.pu .chip-list {
  display:flex; flex-wrap:wrap; gap:.5rem;
  list-style:none; padding-left:0; margin:.6rem 0 0;
}
.pu .chip-list > li {
  border:1px solid var(--sl-color-hairline);
  border-radius:999px;
  padding:.25rem .6rem;
  font-size:.9rem;
  background:#fff;
}



</style>
